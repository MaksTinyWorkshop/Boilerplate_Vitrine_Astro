---
import type { AlternateLink } from "@app-types/seo";
import CtaToCallback from "@components/CTAs/CTAtoCallback/CtaToCallback.astro";
import Icon from "@components/Icons/Icon.astro";
import Spacer from "@components/UI/Spacer.astro";
import ThemeToggle from "@components/UI/ThemeToggle/ThemeToggle.astro";
import {
DEFAULT_LOCALE,
LOCALE_LABELS,
LOCALE_SHORT_LABELS,
isInternalHref,
localizePath,
stripLocaleFromPath,
type Locale,
} from "@lib/i18n/locales";
import type { SiteConfig } from "@lib/siteData";
import { getSiteConfig } from "@lib/siteData";
import { resolveUrl, stripBaseFromPath } from "@lib/urlHelpers";
import styles from "./navbar.module.scss";

interface NavbarProps {
  site?: SiteConfig;
  locale?: Locale;
  alternates?: AlternateLink[];
}

const {
  site,
  locale = DEFAULT_LOCALE,
  alternates = [],
} = Astro.props as NavbarProps;

const siteContent = site ?? getSiteConfig(locale);

const normalizePath = (value: string) => {
  if (!value) return "/";
  const withSlash = value.startsWith("/") ? value : `/${value}`;
  return withSlash.length > 1 && withSlash.endsWith("/")
    ? withSlash.slice(0, -1)
    : withSlash;
};

const resolveHref = (path: string) => {
  if (!path || path === "/") {
    return resolveUrl(localizePath("/", locale));
  }

  if (!isInternalHref(path)) {
    return path;
  }

  return resolveUrl(localizePath(path, locale));
};

const currentPath = stripLocaleFromPath(
  stripBaseFromPath(Astro.url.pathname),
  locale,
);
const normalizedCurrentPath = normalizePath(currentPath);

const primaryLogo = siteContent.brand.logos[0];
const logoAsset = primaryLogo
  ? {
      url: resolveUrl(primaryLogo.src),
      alt: primaryLogo.alt ?? siteContent.brand.name,
    }
  : { url: "", alt: "" };

const menu = siteContent.navigation.main.map((item) => {
  const targetPath = item.href;
  const href = resolveHref(targetPath);
  const normalizedTarget = normalizePath(targetPath);
  const active =
    normalizedTarget === "/"
      ? normalizedCurrentPath === "/"
      : normalizedCurrentPath.startsWith(normalizedTarget);
  return {
    ...item,
    href,
    active,
  };
});

const contactItems = siteContent.contact.items.map((item) => ({
  ...item,
  href: isInternalHref(item.href) ? resolveHref(item.href) : item.href,
}));

const languageSwitcherLabel =
  siteContent.language === "en" ? "Change language" : "Changer de langue";

const localeDefinitions = new Map(
  (siteContent.i18n?.locales ?? []).map((option) => [option.code, option]),
);

const normalizedAlternates = alternates
  .map((alternate) => {
    const localeCode =
      typeof alternate.locale === "string"
        ? alternate.locale
        : alternate.locale;

    if (!localeCode || localeCode === "x-default") return null;

    const href = alternate.url ?? alternate.path ?? "/";
    const meta = localeDefinitions.get(localeCode as Locale);

    return {
      code: localeCode,
      href: resolveUrl(href),
      label: meta?.label ?? alternate.label ?? LOCALE_LABELS[localeCode as Locale] ?? localeCode,
      shortLabel: meta?.shortLabel ?? LOCALE_SHORT_LABELS[localeCode as Locale] ?? localeCode.toUpperCase(),
    };
  })
  .filter((option): option is {
    code: string;
    href: string;
    label: string;
    shortLabel: string;
  } => Boolean(option));

const uniqueAlternates = new Map<string, typeof normalizedAlternates[number]>();
normalizedAlternates.forEach((option) => {
  if (!uniqueAlternates.has(option.code)) {
    uniqueAlternates.set(option.code, option);
  }
});

if (!uniqueAlternates.has(locale)) {
  const fallbackHref = resolveUrl(localizePath(normalizedCurrentPath || "/", locale));
  uniqueAlternates.set(locale, {
    code: locale,
    href: fallbackHref,
    label: LOCALE_LABELS[locale] ?? locale.toUpperCase(),
    shortLabel: LOCALE_SHORT_LABELS[locale] ?? locale.toUpperCase(),
  });
}

const languageOptions = Array.from(uniqueAlternates.values());

const currentLocaleOption =
  languageOptions.find((option) => option.code === locale) ?? languageOptions[0];

const navLanguageLabel = currentLocaleOption?.shortLabel ?? currentLocaleOption?.label;

const otherLocales = languageOptions.filter((option) => option.code !== locale);
---

<nav data-navbar>
  <div class={styles.navbar}>
    <div class={styles.logo}>
      <a href={resolveHref("/")}>
        {
          logoAsset.url && (
            <img src={logoAsset.url} alt={logoAsset.alt ?? "Logo"} />
          )
        }
      </a>
    </div>

    <div class={styles.desktopNav}>
      <ul>
        {
          menu.map((item) => (
            <li class={item.active ? styles.active : ""}>
              <a href={item.href}>{item.label}</a>
            </li>
          ))
        }
      </ul>
    </div>

    <div class={styles.desktopActions}>
      {
        otherLocales.length > 0 && (
          <div class={styles.languageButton}>
            <details>
              <summary aria-label={languageSwitcherLabel}>
                <span>{navLanguageLabel}</span>
                <Icon type="chevron-down" />
              </summary>
              <ul>
                {languageOptions.map((option) => (
                  <li>
                    <a
                      href={option.href}
                      lang={option.code}
                      aria-current={option.code === locale ? "true" : "false"}
                    >
                      {option.shortLabel}
                    </a>
                  </li>
                ))}
              </ul>
            </details>
          </div>
        )
      }
      <ThemeToggle class={styles.desktopThemeToggle} />
    </div>

    <input
      type="checkbox"
      id="burger"
      class={styles.toggle}
      aria-controls="menu-panel"
    />

    <label class={styles.burger} for="burger" aria-label="Basculer le menu">
      <span></span>
      <span></span>
      <span></span>
    </label>
    <label for="burger" class={styles.overlay} aria-hidden="true"></label>

    <div id="menu-panel" class={styles.menulist}>
      <ul>
        {
          menu.map((item) => (
            <li class={item.active ? styles.active : ""}>
              <a href={item.href}>{item.label}</a>
            </li>
          ))
        }
      </ul>

      <Spacer size="var(--space-4)" axis="vertical" />

      <CtaToCallback label={siteContent.interactions.callback.triggerLabel} />

      <div class={styles.menu_footer}>
        {
          otherLocales.length > 0 && (
            <div class={styles.languageButton}>
              <details>
                <summary aria-label={languageSwitcherLabel}>
                  <span>{navLanguageLabel}</span>
                  <Icon type="chevron-down" />
                </summary>
                <ul>
                  {languageOptions.map((option) => (
                    <li>
                      <a
                        href={option.href}
                        lang={option.code}
                        aria-current={option.code === locale ? "true" : "false"}
                      >
                        {option.shortLabel}
                      </a>
                    </li>
                  ))}
                </ul>
              </details>
            </div>
          )
        }
        <ThemeToggle class={styles.menuThemeToggle} />
      </div>

    </div>
  </div>
  {
    contactItems.length > 0 && (
      <div class={styles.contact_panel}>
        {contactItems.map((item) => (
          <a
            class={styles.contact_item}
            href={item.href}
            aria-label={item.label}
          >
            {item.icon && (
              <span class={styles.contact_icon}>
                <Icon type={item.icon} color="var(--color-neutral)" />
              </span>
            )}
            <span class={styles.contact_label}>{item.label}</span>
          </a>
        ))}
      </div>
    )
  }
</nav>

<script src="./navbar.client.ts"></script>
